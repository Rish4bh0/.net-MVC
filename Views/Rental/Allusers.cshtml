@using Rentalmandu.Areas.Identity.Data
@model List<HajurKoCarRentalUser>

<h1>All Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Rental History</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <form method="get" asp-controller="Rental" asp-action="indiRentalHistory">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-info">View Rental History</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
